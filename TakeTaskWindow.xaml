<Window x:Class="ExamProject.TakeTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ExamProject"
        mc:Ignorable="d"
        Title="TakeTaskWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel >
            <TextBlock Name="UserT" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"></TextBlock>
            <TextBox materialDesign:HintAssist.Hint="Краткое описание"  Height="60" x:Name="TaskText" TextAlignment="Center" FontSize="20"></TextBox>
            <TextBox materialDesign:HintAssist.Hint="Полное описание" AcceptsReturn="True" TextWrapping="Wrap" Height="200" x:Name="FullText" FontSize="16"></TextBox>
            <Button IsCancel="True" Content="Добавить задание" Click="TakeTask_Click"></Button>
        </StackPanel>
        
        
    </Grid>
</Window>
